<div class="well">
  <table>
    <tr>
      <td style="padding-left:20px">
      <h2>Sign up</h2>

		  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  	  	<%= devise_error_messages! %>

  	  	<div>
	    		<%= f.label :email %>
	    		<%= f.email_field :email, :autofocus => true %>
	  	  </div>
	  	
	  	  <div>
	  		  <%= f.label :company_name %>
	  		  <%= f.text_field :username, :autofocus => true %>
        </div>

        <div>
          <%= f.label :city %>
          <%= f.text_field :city, :autofocus => true %>
        </div>

        <div>                                                                   
          <%= f.label :state %>                                                  
          <%= f.text_field :state, :autofocus => true %>                        
        </div>   

        <div>                                                                   
          <%= f.label :phone %>                                                  
          <%= f.text_field :phone, :autofocus => true %>                        
        </div>   
        
        <div>
	  	  	<%= f.label :password %>
	  		  <%= f.password_field :password %>
	  	  </div>
	
	  	  <div>
	  		  <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
	      <div>
	    	  <%= f.submit "Create a Free Account", class: "btn btn-info btn-large" %>
        </div>
      </td>
      <td style="vertical-align:top; padding-left:40px; padding-top:40px">
        <h2 style="padding-left:60px">You're seconds away from saving time and money.</h2>
        <h3 style="padding-top:200px" class="center">(Fill out this simple form and we'll get you all set up.)</h3>
        <h5 class="center">Promise.</h5>

      </td>
    </tr>
  </table>
		    <% end %>

	      <%= render "devise/shared/links" %>
	
     </div>
