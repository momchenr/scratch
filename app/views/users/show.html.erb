<div class="well">
  <h1><%= @user.username %></h1>
  	<ul>
  	  <li>From <%= @user.location %></li>
	  <li>Phone Number: <%= @user.phone %></li>
  	  <li>Email: <%= @user.email %></li>
  	  <li>Sign In Count: <%= @user.sign_in_count %></li>
  	  <li>Last Seen: <%= @user.last_sign_in_at %></li>
  	  <li>Created On: <%= @user.created_at %></li>
  	  <li>User Id: <%= @user.id %></li>
  	</ul>
</div>

<div class="well">
	<h1><%= @user.username %>'s items</h1>
	<table>
		<% @user.items.each do |item| %>
			<tr>
			  	<td><%= link_to item.title, item_path(item) %></td>
			    <td><%= item.content %></td>
			    <% if item.email == current_user.email %>
			    <td><%= link_to 'Edit', edit_item_path(item) %></td>
			    <td><%= link_to 'Delete', item, confirm: 'Are you sure?', method: :delete %></td>
			    <% else %>
			    <% end %>
			  </tr>
		<% end %>
	</table>
</div>

 	
 

