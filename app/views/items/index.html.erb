<div class="row">
  <div class="span6">
<div class="well">
  <h1>Search</h1>
  <%= form_tag items_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil, :class => 'btn btn-info',
      :style => 'margin-bottom:10px' %>
      <%= link_to "Browse Items", items_path, :class => 'btn btn-success',
      :style => 'margin-bottom:10px' %>
  </p>
  <% end %>
</div>
</div>
<div class="span9">
  <div class="well">
    <h2>Did you know?</h2>
    <p>You should specify sizes, material, and part type in your searches.
    For example, you could search for <strong>6" SS 316 90</strong>. The more
    info there is to start with, the better! Click here for more info. </p>
  </div>
</div>
</div>

<div class="well">

  <h1>All Items</h1>
    <table style="text-align:left; width:100%">
      <tr>
        <th><h3>Title</h3></th>
        <th style=""><h3>Details</h3></th>
        <th style=""><h3>Price</h3></th>
	      <th style=""><h3>Location</h3></th>
        <th style=""><h3>Inquire</h3></th>
        <th style=""><h3>Edit</h3></th>
        <th style=""><h3>Delete</h3></th>
        <th><h3></h3></th>
      </tr>

  <% @items.each do |item| %>
      <tr>
        <td><%= link_to truncate(item.title.to_s, :length => 25), item_path(item) %></td>
        <td style=""><%= truncate(item.content.to_s, :length => 27) %></td>
        
        <% if item.price == nil %>
          <td style="">-</td>
        <% else %>
          <td style=""><%= item.price.to_s %></td>
        <% end %>
        
        <td style=""><%= item.location %></td>
        <td style=""><%= mail_to item.email.to_s, "Inquire", :cc => "michaelomchenry@gmail.com",
            :subject => "OverFlow Inquiry Regarding " + item.title.to_s %></td>    
			         
        <% if item.email == current_user.email %>
        <td style=""><%= link_to 'Edit', edit_item_path(item).to_s %></td>
        <td style=""><%= link_to 'Delete', item, confirm: 'Are you sure?', method: :delete %></td>
        <% else %>
        <% end %>
      </tr>
      <% end %>
    </table>
    <br />

    <div>
      <%= paginate @items %>
    </div>

  <%= link_to 'New Item', new_item_path %>

</div>
